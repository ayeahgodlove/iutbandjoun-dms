{% extends "dashboard.layout.php" %} 
{% block content %}
{% if(flash_message) %}
    <div class="alert alert-success">
        {{ flash_message }}
    </div>
{% endif %}
<h1>Welcome to dashboard</h1>
<div class="card mt-5">
    <div class="card-body d-flex flex-row justify-content-between align-items-center">
        <p class="card-text mb-0">Time table for the week</p>
        <button class="btn btn-sm btn-info">Download</button>
    </div>
</div>

<!-- news and updates -->
<div class="row">
    <div class="col-md-8">

        <div class="card">
            <div class="card-header card-header-warning d-flex justify-content-between align-items-lg-center">
                <div class="card-title">News and Updates</div>
                <button class="btn btn-sm btn-round btn-fab btn-success">+</button>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for i in range(0, 5) %}
                    <li class="list-group-item">
                        <button class="btn" style="width:100%"><i class="fa fa-download"></i> Download</button>

                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}